                    <div class="card">
                        <div class="card-header">Font Awasome</div>
                        <div class="card-body">
                            <ul class="list-group">
                                {% for resource in fontawesome  %}
                                    <p>
                                        {{ resource.code|raw }}
                                        <code>{{ resource.text }}</code>
                                        <a href="/admin/?action=edit&entity=Resource&sortField=id&sortDirection=DESC&id={{ resource.id }}&referer={{ referer }}" class="btn btn-outline-primary btn-sm ">Edit</a>
                                    </p>
